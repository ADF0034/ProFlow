@model IEnumerable<Users>
@{
}

<table class="table">
    <thead>
        <tr>
            <th>
                UserName
            </th>
            <th>
                User Rolle
            </th>
            <th>
                Handling
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @if (item.Role == "NormalUser")
                    {
                        <a asp-action="UpdateUserRole" asp-route-UserId="@item.Id" asp-route-RoleId="20fd80c3-d647-4cfa-985b-53d8f54607fc"><span class="bi bi-person-fill-up"></span></a>

                    }
                    else
                    {
                        <a asp-action="UpdateUserRole" asp-route-UserId="@item.Id" asp-route-RoleId="b9179de7-bc69-49a2-86b6-44ea9553f658"><span class="bi bi-person-fill-down"></span></a>
                    }
                    <a asp-action="DeleteUser" asp-route-id="@item.Id"><span class="bi bi-trash-fill"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
