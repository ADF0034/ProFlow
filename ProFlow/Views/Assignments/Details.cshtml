@model ProFlow.Models.Assignments

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<button type="button" class="btn btn-warning mx-3" data-bs-toggle="modal" data-bs-target="#OpretProjekt">
    Tast Tid
</button>

<div>
    <h4>Assignments</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Beskrivelse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Beskrivelse)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectModel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectModel.Password)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.AssigmentID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

